#!/usr/bin/env python3

import subprocess
import sys

def main():
    if len(sys.argv) < 2:
        print("Usage: ./run <argument>")
        sys.exit(1)
    
    argument = sys.argv[1]
    command = ["node", "./dist/src/index.js", argument]
    
    try:
        subprocess.run(command, check=True)
    except subprocess.CalledProcessError as e:
        print(f"An error occurred: {e}")
        sys.exit(1)

if __name__ == "__main__":
    main()
